<%= render "shared/header_second" %>
<div class="navbar navbar-dark bg-dark shadow-sm">
  <div class="container">
    <h3 class="text-white" >Log in</h3>
  </div>
</div>

<%= form_with model: @user, url: user_session_path, class: "justify-content-center", local: true do |f| %>
  <%= render "shared/error_messages", model: f.object%>
  <div class="bg-light">
  <div class="container">
  <div class="justify-content-center">
    <div>
      <label for="exampleFormControlInput1" class="form-label mt-5">Email address</label>
      <%# <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com"> %>
      <%= f.email_field :email, class:"form-control", id:"exampleFormControlInput1", placeholder:"name@example.com", autofocus: true %>
    </div>
    <div >
      <label for="exampleFormControlInput1" class="form-label">Password (6 characters minimum length)</label>
      <%# <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="password"> %>
      <%= f.password_field :password, class:"form-control", id:"exampleFormControlInput1", placeholder:"password123" %>
    </div>

    <div class="d-grid gap-2 d-md-block">
      <%= f.submit "Sign up", class:"btn btn-outline-success mt-5 mb-5" %>
    </div>
  </div>
  </div>
  </div>
<% end %>

<%= render "shared/footer" %>
<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

