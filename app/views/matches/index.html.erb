<main>
<% if user_signed_in?%>
  <% if @event.user.id == current_user.id %>
    <div class="d-grid gap-2 col-8 mx-auto">
      <%= link_to "New Match Log", new_event_match_path(@event), class:"btn btn-outline-primary mt-5"%>
    </div>
  <% end %>
<% end %>
